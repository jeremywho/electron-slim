{
  "name": "electron-slim",
  "version": "0.0.1",
  "author": "Jeremy Daughhetee",
  "license": "MIT",
  "build": {
    "appId": "com.plate.boiler",
    "mac": {
      "category": "your.app.category.type"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "directories": {
      "output": "release"
    }
  },
  "main": "./dist/main-process.js",
  "scripts": {
    "build-dev": "webpack --mode=development --config webpack.renderer.config.ts && webpack --mode=development --config webpack.main.config.ts",
    "build-prod": "webpack --mode=production --config webpack.renderer.config.ts && webpack --mode=production --config webpack.main.config.ts",
    "prod": "npm run build-prod && electron .",
    "dev": "concurrently \"npm run server\" \"npm run start\"",
    "server": "webpack serve --mode=development --config webpack.renderer.config.ts --hot",
    "start": "webpack --mode=development --config webpack.main.config.ts && electron .",
    "dist": "npm run build-prod && electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "react": "^17.0.0",
    "react-dom": "^17.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/preset-env": "^7.12.1",
    "@babel/preset-react": "^7.12.1",
    "@babel/preset-typescript": "^7.12.1",
    "@types/node": "^14.14.2",
    "@types/react": "^16.9.53",
    "@types/react-dom": "^16.9.8",
    "@types/webpack": "^4.41.23",
    "@types/webpack-env": "^1.15.3",
    "babel-loader": "^8.1.0",
    "concurrently": "^5.3.0",
    "electron": "^10.1.4",
    "electron-builder": "^22.9.1",
    "html-webpack-plugin": "^4.5.0",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3",
    "webpack": "^5.1.3",
    "webpack-cli": "^4.1.0",
    "webpack-dev-server": "^3.11.0"
  }
}
